/**app.wxss**/
page {
  height: 100%;
}

.container {
  background: #F7F7F7;
  height: 94%;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.nav-bar {
  border: 0.25px solid rgba(204, 192, 192, 0.774);
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 6%;
  display: flex;
  justify-content: space-around;
}

.nav-bar .icons{
  border: 1px solid red;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.nav-bar .icons image {
  border: 1px solid red;
  width: 70%;
  height: 50%;
}

.nav-bar .icons .text{
  border: 1px solid red;
  width: 70%;
  text-align: center;
  position: absolute;
  bottom: 10rpx;
  color: #80807e;
  font-size: 18rpx;
}

image {
  border-top: 0.25rpx solid rgb(0, 255, 234);
  box-shadow: 0rpx 2rpx 2rpx rgb(0, 255, 234);
}