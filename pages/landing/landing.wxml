<!--pages/landing/landing.wxml-->
<view class="rehide {{popUp?'':'hide'}}" bindtap="hidePopUp"></view>
<view class="surprise {{popUp?'':'hide'}}">
  <view class="pop-up">
      <image src="{{}}"/>
      <view class="a-pet-info">
        <view class="name"></view>
        <view class="description"></view>
        <view class="daily-rate"></view>
      </view>
    <button bindtap="goToSummary"></button>
  </view>
</view>
<view class="everything {{popUp ?'blur':''}}">
  <view class="container">
    <view class="banner"> </view>
    <view class="contents">
      <!--  -->
      <view class="pet-card" wx:for="{{pets}}" wx:for-item="pet" data-id="{{pet.id}}" bindtap="enablePopUp">
        <image src="{{pet.photo}}"/>
        <view class="pet-info">
          <view class="h3">{{pet.name}}</view>
          <view class="description">
            <view class="prop"> 
              <view class="gender-breed">
                <view class="gender" style="font-size: 15rpx"></view>
                <view class="breed" style="font-size: 19rpx">{{pet.breed}}</view>
              </view>
              <view class="neutered" style="font-size:18rpx">{{pet.neutered?'✅':'❌'}}neutered</view>
            </view>
            <view class="p" style="font-size: 20rpx">{{pet.description}}</view>
          </view>
        </view>
      </view>
    </view>
    <view style="height:150rpx"></view>
  </view>

  <view class="nav-bar">
    <button class="icons {{home?'grey':''}}" bindtap="goToLanding">
      <image src="/images/sydney-opera-house.svg"/>
      <view class="text">Home</view>
    </button>
    <button class="icons {{add?'grey':''}}" bindtap="goToAdd">
      <image src="/images/veterinary.svg"/>
      <view class="text">Add new</view>
    </button>
    <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="icons {{profile?'grey':''}}">
      <image src="/images/user.svg"/>
      <view class="text">Me</view>
    </button>
  </view>
</view>
