/* pages/landing/landing.wxss */

.hide {
  display: none;
}

.everything {
  z-index: 1;
}

.rehide {
  z-index: 1;
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: black;
  opacity: 0.2;
}

.surprise {
  position: fixed;
  width: 74%;
  height: 64%;
  top: 15%;
  left: 13%;
  right: 13%;
  z-index: 2;
}

.pop-up {
  height: 100%;
  width: 100%;
  background-color: #F7F7F7;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-top: 5rpx solid #FFF3D0;
  border-left: 5rpx solid #FFF3D0;
  border-right: 5rpx solid #FFF3D0;
}

.pop-up > image{
  width: 80%;
  height: 28%;
  box-shadow: 12rpx 12rpx 12rpx #FFF3D0;
}

.pop-up > .a-pet-info{
  width: 80%;
  height: 42%;
  background: white;
}

.pop-up > button{
  margin-left: 0;
  margin-right: 0;
  padding: 15rpx 15rpx 20rpx 15rpx;
  box-shadow: 0 2rpx 2rpx rgb(0, 255, 234);
  width: 15rpx;
  height: 12%;
  background-color:#FF695D;
  color: white;
}

.blur {
  filter: blur(4rpx);
}

.everything {
  height: 100%;
}

.banner {
  top: 0;
  border: 1px solid rgb(126, 121, 121);
  width: 100%;
  height: 450rpx;
  border-radius: 20rpx;
}

.pet-card {
  background: white;
  margin: 20rpx 10rpx 0rpx 10rpx;
  width: 98%;
  height: 230rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 8rpx rgb(231, 231, 231);
}

.pet-card image {
  width: 30%;
  height: 80%;
  border-radius: 70rpx;
  border: 3rpx solid #FFF3D0;
  box-shadow: 0rpx 5rpx 3rpx #FF695D;
}

.pet-info {
  height: 78%;
  width: 54%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.pet-info .h3{
  border: 1px solid rgba(204, 192, 192, 0.774);
  border-radius: 10rpx;
  height: 20%;
  width: 50%;
}

.pet-info .description {
  background: #F7F7F7;
  border-radius: 14rpx;
  height: 53%;
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 24rpx;
}

.pet-info .description .prop {
  margin-top: 8rpx;
  height: 24%;
  width: 90%;
  display: flex;
  justify-content: space-evenly;
}

.pet-info .description .prop .gender-breed {
  border-radius: 50rpx;
  background-color: white;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

.pet-info .description .prop .neutered {
  border-radius: 50rpx;
  background-color: white;
  width: 50%;
  height: 100%;
  border: 1px solid black;
}

.pet-info .description .prop .gender-breed .breed {
  width: 70%;
  height: 100%;
  border: 1px solid black;
}

.pet-info .description .prop .gender-breed .gender {
  width: 25%;
  height: 100%;
  border: 1px solid black;
}

.pet-info .description .p {
  width: 90%;
  height: 58%;
  margin-top: 10rpx;
  margin-left: 15rpx;
  background: white;
}

.login-pop-up {
  width: 100%;
  height: 40%;
  background-color: white;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

.rehide-pop-up {
  width: 100%;
  height: 60%;
  position: fixed;
  top: 0;
}
