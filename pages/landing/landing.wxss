/* pages/landing/landing.wxss */

.hide {
  display: none;
}

.surprise {
  position: fixed;
  width: 74%;
  height: 50%;
  top: 15%;
  left: 13%;
  right: 13%;
}

.pop-up {
  height: 100%;
  width: 100%;
  background-color: #F7F7F7;
  border-radius: 20rpx;
  border: 1px solid black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.pop-up > image{
  width: 80%;
  height: 28%;
}

.pop-up > .a-pet-info{
  width: 80%;
  height: 42%;
  background: white;
}

.pop-up > button{
  margin-left: 0;
  margin-right: 0;
  padding: 15rpx 15rpx 20rpx 15rpx;
  border-top: 1rpx solid rgb(0, 255, 234);
  box-shadow: 0 2rpx 2rpx rgb(0, 255, 234);
  width: 15rpx;
  height: 8%;
  background-color:rgb(0, 255, 234);
  color: white;
}

.blur {
  filter: blur(4rpx);
}

.everything {
  height: 100%;
}

.banner {
  top: 0;
  border: 1px solid rgb(126, 121, 121);
  width: 100%;
  height: 32%;
  border-radius: 20rpx;
}

.container .contents {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.pet-card {
  background: white;
  margin: 20rpx 10rpx 0rpx 10rpx;
  width: 94%;
  height: 230rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 12rpx;
}

image {
  width: 30%;
  height: 80%;
  border-radius: 70rpx;
  border-top: 0.25rpx solid rgb(0, 255, 234);
  box-shadow: 0rpx 2rpx 2rpx rgb(0, 255, 234);
}

.pet-info {
  height: 78%;
  width: 54%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.pet-info .h3{
  border: 1px solid rgba(204, 192, 192, 0.774);
  border-radius: 10rpx;
  height: 20%;
  width: 50%;
}

.pet-info .description {
  background: rgba(204, 192, 192, 0.774);
  border-radius: 14rpx;
  height: 53%;
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 24rpx;
}

.pet-info .description .prop {
  margin-top: 8rpx;
  height: 24%;
  width: 90%;
  display: flex;
  justify-content: space-evenly;
}

.pet-info .description .prop .gender-breed {
  border-radius: 50rpx;
  background-color: white;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

.pet-info .description .prop .neutered {
  border-radius: 50rpx;
  background-color: white;
  width: 35%;
  height: 100%;
}

.pet-info .description .prop .gender-breed .breed {
  width: 70%;
  height: 100%;
}

.pet-info .description .prop .gender-breed .gender {
  width: 25%;
  height: 100%;
}

.pet-info .description .p {
  width: 90%;
  height: 58%;
  margin-top: 10rpx;
  margin-left: 15rpx;
  background: white;
}







.nav-bar {
  border: 0.25px solid rgba(204, 192, 192, 0.774);
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 6%;
  display: flex;
  justify-content: space-around;
}

.nav-bar .icons{
  border: 1px solid red;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.nav-bar .icons image {
  border: 1px solid red;
  width: 70%;
  height: 50%;
}

.nav-bar .icons .text{
  border: 1px solid red;
  width: 70%;
  text-align: center;
  position: absolute;
  bottom: 10rpx;
  color: #80807e;
  font-size: 18rpx;
}



