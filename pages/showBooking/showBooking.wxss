/* pages/show/show.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  height: 94%;
}

.container > image {
  width: 72%;
  height: 37%;
  border-radius: 18rpx;
  border: 4rpx solid #FFF3D0;
  box-shadow: 0rpx 10rpx 12rpx #FFF3D0;
}

.pet-card {
  width: 75%;
  height: 45%;
  position: relative;
  background: white;
  border-radius: 8rpx;
}

.pet-name {
  height: 12%;
  width: 50%;
  position: absolute;
  top: 50rpx;
  left: 30rpx;
  font-family: initial;
  padding-left: 48rpx;
  font-weight: bolder;
}

.description {
  height: 60%;
  width: 80%;
  left: 30rpx;
  top: 120rpx;
  position: absolute;
  border-radius: 50rpx;
  box-shadow: 1px 1px 0px #F7F7F7;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background:#FFF3D0;
  margin-left: 26rpx;
}

.description .prop {
  width: 100%;
  height: 14%;
  display: flex;
  justify-content: flex-start;
}


.description .prop .gender-breed {
  border-radius: 10rpx;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

.description .prop .neutered {
  border-radius: 50rpx;
  width: 35%;
  height: 100%;
  font-family: 'Times New Roman', Times, serif;
  padding-left: 26rpx;
}

.description .prop .gender-breed .breed {
  width: 70%;
  height: 100%;
  font-family: 'Times New Roman', Times, serif;
  padding-top: 20rpx;
  text-align: center;
}

.description .prop .gender-breed .gender {
  border: 1px solid black;
  width: 25%;
  height: 100%;
  padding-top: 12rpx;
}


.description .p {
  width: 100%;
  height: 80%;
}

.container > button {
  width: 72%;
  height: 5%;
  background:#FF695D;
  margin-bottom: 25rpx;
}















































