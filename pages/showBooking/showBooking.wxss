.description {
  height: 200rpx;
  width: 92%;
  left: 0rpx;
  top: 20rpx;
  margin-top: 20rpx;
  /* position: absolute; */
  border-radius: 25rpx;
  box-shadow: 1px 1px 0px #F7F7F7;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background:#FFF3D0;
  margin-left: 22rpx;
}

.description .prop {
  width: 100%;
  height: 12%;
  display: flex;
  justify-content: flex-start;
}


.description .prop .gender-breed {
  border-radius: 10rpx;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.description .prop .neutered {
  border-radius: 50rpx;
  width: 35%;
  height: 100%;
  font-family: 'Times New Roman', Times, serif;
  padding-left: 26rpx;
}

.description .prop .gender-breed .breed {
  width: 70%;
  height: 100%;
  font-family: 'Times New Roman', Times, serif;
  padding-top: 20rpx;
  text-align: center;
}

.description .prop .gender-breed .gender {
  border: 1px solid black;
  width: 25%;
  margin-top: 17px;
}


.description .p {
  width: 100%;
  height: 35%;
  padding-top: 20rpx;
  font-family: 'Times New Roman', Times, serif;
  font-size: medium;
  margin-left: 12rpx;
  margin-top: 12rpx;
}

.bookings {
  height: 200rpx;
  width: 92%;
  /* top: 245rpx; */
