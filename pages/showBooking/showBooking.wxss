  background:#fff3d0;
  margin-left: 22rpx;
  margin-top: 20rpx;
  font-size: medium;
  font-family: 'Times New Roman', Times, serif;

}

.bookings .dates {
display: flex;
flex-direction: column;
margin-top: 10rpx;
margin-left: 15rpx;
}

.bookings .details {
  /* display: flex; */
